

     <div class="row justify-content-center">
            <div class="col-6">
            {{ form_start(form) }}
                {{ form_widget(form._token)}}
                <div class="form-group">
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title) }}
                    {{ form_errors(form.title) }}
                    {{ form_help(form.title) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                    {{ form_help(form.description) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.cover) }}
                    {{ form_widget(form.cover) }}
                    {{ form_errors(form.cover) }}
                    {{ form_help(form.cover) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.price) }}
                    {{ form_widget(form.price) }}
                    {{ form_errors(form.price) }}
                    {{ form_help(form.price) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.category) }}
                    {{ form_widget(form.category) }}
                    {{ form_errors(form.category) }}
                    {{ form_help(form.category) }}
                </div>
                {# <div class="form-group">
                    {{ form_label(form.authors) }}
                    {{ form_widget(form.authors) }}
                    {{ form_errors(form.authors) }}
                    {{ form_help(form.authors) }}
                </div> #}

                <div data-controller="collection" class="form-group my-2">

                    <div data-collection-id id="authors-collection">

                    </div>
                    <template data-collection="#authors-collection">
                        <div class="input-group">
                            {{ form_widget(form.authors.vars.prototype) }}
                            <div class="input-group-append">
                                <button type="button" 
                                        aria-label="Delete">&times;</button>
                            </div>
                        </div>
                    </template>

                    <button type="button" 
                            class="btn btn-secondary my-2"
                            data-action="click->collection#getTemplate">Ajouter un auteur</button>
                </div>

                <button class="btn btn-primary" type="submit">{{ btn_label | default("Ajouter le livre")}}</button>
                {{ form_end(form, {'render_rest': false})}}
            </div>
        </div> 

